@page
@model WebUI.Pages.Category.EditModel
@{
    ViewData["Title"] = "İtem Düzenleme";
}

<h1>Kategori Düzenleme</h1>
<hr />

<div class="row">
    <div class="col">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Category.Id" type="hidden" />

            <div class="form-group">
                <label asp-for="Category.ParentCategoryId" class="control-label">Üst Kategori</label>
                <select asp-for="Category.ParentCategoryId" asp-items="Model.AllCategories" class="form-control category-select"></select>
                <span asp-validation-for="Category.ParentCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Name" class="form-label">Kategori Adı</label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Description" class="form-label">Açıklama (isteğe bağlı)</label>
                <input asp-for="Category.Description" class="form-control" />
                <span asp-validation-for="Category.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="List">Listeye Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
