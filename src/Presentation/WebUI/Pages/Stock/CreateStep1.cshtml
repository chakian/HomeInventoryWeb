@page
@model WebUI.Pages.Stock.CreateStep1Model
@{
    ViewData["Title"] = "Stok Girişi";
}

<h1>Yeni Stok Girişi - Ürün Seçim Adımı</h1>

<div class="row">
    <div class="col">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ItemDefinitionId" class="control-label"></label>
                <select asp-for="ItemDefinitionId" asp-items="Model.AllItemDefinitions" class="form-control"></select>
                <span asp-validation-for="ItemDefinitionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Devam" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Overview">Listeye Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
