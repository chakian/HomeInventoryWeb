@page
@model WebUI.Pages.Item.ListModel
@{
    ViewData["Title"] = "İtemler";
}

<h1>İtemler</h1>
<a class="btn btn-primary" asp-page="Create">Yeni İtem</a>
<hr />

<div class="row border-bottom">
    <div class="col-6 font-weight-bold">İtem</div>
    <div class="col-6 font-weight-bold">Açıklama</div>
</div>
@foreach (var item in Model.Items)
{
    @(await Html.RenderComponentAsync<ListItem>( RenderMode.Static, new { item = item }))
}
