@page
@model WebUI.Pages.UserSetting.IndexModel
@{
    ViewData["Title"] = "Ayarlar";
}

<div class="row">
    <div class="col-8"><h2>Uygulama Ayarları</h2></div>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserSetting.UserId" type="hidden" />
            <div class="form-group">
                <label asp-for="UserSetting.DefaultHomeId" class="control-label"></label>
                <select asp-for="UserSetting.DefaultHomeId" class="form-select">
                    <option value="0">Aktif Evinizi Seçiniz</option>
                    @if (Model.HomeList != null)
                    {
                        @foreach (var home in Model.HomeList)
                        {
                            <option value="@(home.Id)">@(
                                 home.Name
                                 )</option>
                        }
                    }
                </select>
                @*<select asp-for="UserSetting.DefaultHomeId" class="form-control"  />*@
                <span asp-validation-for="UserSetting.DefaultHomeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
