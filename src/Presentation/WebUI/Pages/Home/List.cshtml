@page
@model WebUI.Pages.Home.ListModel
@{
    ViewData["Title"] = "Evlerim";
}

<h1>Evlerim</h1>
<a class="btn btn-primary" asp-page="Create">Yeni Ev Oluştur</a>
<hr />

<div class="row border-bottom">
    <div class="col-4 font-weight-bold">Evin Adı</div>
    <div class="col-6 font-weight-bold">Evin Açıklaması</div>
    <div class="col-2">#</div>
</div>
@foreach (var home in Model.Homes)
{
    <div class="row">
        <div class="col-4">@(home.Name)</div>
        <div class="col-6">@(home.Description)</div>
        <div class="col-2"><a asp-page="Edit" asp-route-homeId=@home.Id>Düzenle</a>&nbsp;<a asp-page="Manage" asp-route-homeId=@home.Id>Yönet</a></div>
    </div>
}
