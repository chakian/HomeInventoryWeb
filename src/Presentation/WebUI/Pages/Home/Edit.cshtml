@page
@model WebUI.Pages.Home.EditModel
@{
    ViewData["Title"] = "Ev Düzenleme";
}

<h1>Ev Düzenleme</h1>

<h4>@Model.Home.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Home.Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Home.Name" class="control-label"></label>
                <input asp-for="Home.Name" class="form-control" />
                <span asp-validation-for="Home.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Home.Description" class="control-label"></label>
                <input asp-for="Home.Description" class="form-control" />
                <span asp-validation-for="Home.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Düzenle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="List">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
